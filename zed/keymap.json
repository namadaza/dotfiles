// Zed keymap
//
// For information on binding keys, see the Zed
// documentation: https://zed.dev/docs/key-bindings
//
// To see the default key bindings run `zed: open default keymap`
// from the command palette.
[
  {
    "context": "Workspace",
    "bindings": {
      // "space f f": "file_finder::Toggle", // use cmd+p native shortcut instead
      // "shift shift": "file_finder::Toggle"
    },
  },
  {
    "context": "Editor && (vim_mode == normal || vim_mode == visual) && !VimWaiting && !menu",
    "bindings": {
      "space e": "editor::ToggleTabBar",
      "space a": [
        "action::Sequence",
        ["pane::TogglePinTab", "pane::UnpinAllTabs"],
      ],
      "space h": "pane::SwapItemLeft",
      "space l": "pane::SwapItemRight",
      "space 1": ["pane::ActivateItem", 0],
      "space 2": ["pane::ActivateItem", 1],
      "space 3": ["pane::ActivateItem", 2],
      "space 4": ["pane::ActivateItem", 3],
      "space 5": ["pane::ActivateItem", 4],
    },
  },
  {
    "context": "Editor && vim_mode == normal",
    "bindings": {
      "cmd-k": "editor::Hover",
    },
  },
  {
    "context": "Editor && vim_mode == insert",
    "bindings": {
      // "j k": "vim::NormalBefore"
    },
  },
  {
    "context": "Pane",
    "bindings": {
      "ctrl-shift-tab": "pane::ActivatePreviousItem",
      "ctrl-tab": "pane::ActivateNextItem",
    },
  },
]
